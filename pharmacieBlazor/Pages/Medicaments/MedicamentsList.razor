@page "/medicaments"
@using pharmacieBlazor.Models
@using pharmacieBlazor.Services.Interfaces
@inject IMedicamentService MedicamentService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3 class="mb-4">
    <i class="bi bi-capsule"></i> Liste des Médicaments
</h3>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="NavigateToCreate">
        <i class="bi bi-plus-circle"></i> Nouveau Médicament
    </button>
</div>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Chargement...</span>
        </div>
        <p>Chargement des médicaments...</p>
    </div>
}
else if (medicaments == null || !medicaments.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Aucun médicament trouvé.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Dosage</th>
                    <th>Ordonnance ID</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var medicament in medicaments)
                {
                    <tr>
                        <td>@medicament.Id</td>
                        <td>@medicament.Nom</td>
                        <td>@medicament.Dosage</td>
                        <td>@(medicament.OrdonnanceId?.ToString() ?? "N/A")</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button class="btn btn-sm btn-info"
                                        @onclick="() => NavigateToDetails(medicament.Id)"
                                        title="Voir les détails">
                                    <i class="bi bi-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-warning"
                                        @onclick="() => NavigateToEdit(medicament.Id)"
                                        title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger"
                                        @onclick="() => DeleteMedicament(medicament.Id)"
                                        title="Supprimer">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="alert alert-secondary">
        <strong>Total:</strong> @medicaments.Count médicament(s)
    </div>
}

@code {
    private List<MedicamentDto>? medicaments;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadMedicaments();
    }

    private async Task LoadMedicaments()
    {
        isLoading = true;
        medicaments = await MedicamentService.GetAllAsync();
        isLoading = false;
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/medicaments/create");
    }

    private void NavigateToDetails(int id)
    {
        Navigation.NavigateTo($"/medicaments/details/{id}");
    }

    private void NavigateToEdit(int id)
    {
        Navigation.NavigateTo($"/medicaments/edit/{id}");
    }

    private async Task DeleteMedicament(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm",
            "Êtes-vous sûr de vouloir supprimer ce médicament ?");

        if (confirmed)
        {
            try
            {
                await MedicamentService.DeleteAsync(id);
                await LoadMedicaments();
            }
            catch (Exception)
            {
                // L'erreur est gérée dans le service
            }
        }
    }
}