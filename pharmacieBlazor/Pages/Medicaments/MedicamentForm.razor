@page "/medicaments/create"
@page "/medicaments/edit/{Id:int}"
@using pharmacieBlazor.Models
@using pharmacieBlazor.Services.Interfaces
@inject IMedicamentService MedicamentService
@inject NavigationManager Navigation

<h3>
    <i class="bi bi-capsule"></i> @(Id == 0 ? "Créer" : "Modifier") un Médicament
</h3>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <EditForm Model="@medicament" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="text-danger" />

                    <div class="mb-3">
                        <label for="nom" class="form-label">Nom du médicament *</label>
                        <InputText id="nom" class="form-control" @bind-Value="medicament.Nom"
                                   placeholder="Ex: Doliprane" />
                        <ValidationMessage For="@(() => medicament.Nom)" class="text-danger" />
                    </div>

                    <div class="mb-3">
                        <label for="dosage" class="form-label">Dosage *</label>
                        <InputText id="dosage" class="form-control" @bind-Value="medicament.Dosage"
                                   placeholder="Ex: 500mg" />
                        <ValidationMessage For="@(() => medicament.Dosage)" class="text-danger" />
                    </div>

                    <div class="mb-3">
                        <label for="ordonnanceId" class="form-label">ID Ordonnance (optionnel)</label>
                        <InputNumber id="ordonnanceId" class="form-control" @bind-Value="medicament.OrdonnanceId" />
                        <small class="form-text text-muted">Laissez vide si non associé à une ordonnance</small>
                    </div>

                    <div class="mb-3">
                        <button type="submit" class="btn btn-primary" disabled="@isSaving">
                            @if (isSaving)
                            {
                                <span class="spinner-border spinner-border-sm" role="status"></span>
                                <span> Enregistrement...</span>
                            }
                            else
                            {
                                <i class="bi bi-save"></i>
                                <span> Enregistrer</span>
                            }
                        </button>
                        <button type="button" class="btn btn-secondary" @onclick="Cancel">
                            <i class="bi bi-x-circle"></i> Annuler
                        </button>
                    </div>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private MedicamentDto medicament = new();
    private bool isSaving = false;

    protected override async Task OnInitializedAsync()
    {
        if (Id != 0)
        {
            var existing = await MedicamentService.GetByIdAsync(Id);
            if (existing != null)
            {
                medicament = existing;
            }
            else
            {
                Navigation.NavigateTo("/medicaments");
            }
        }
    }

    private async Task HandleValidSubmit()
    {
        isSaving = true;
        try
        {
            if (Id == 0)
            {
                await MedicamentService.CreateAsync(medicament);
            }
            else
            {
                medicament.Id = Id;
                await MedicamentService.UpdateAsync(medicament);
            }
            Navigation.NavigateTo("/medicaments");
        }
        catch (Exception)
        {
            // L'erreur est déjà gérée dans le service
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/medicaments");
    }
}