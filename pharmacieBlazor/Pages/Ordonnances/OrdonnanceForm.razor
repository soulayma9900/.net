@page "/ordonnances/create"
@page "/ordonnances/edit/{Id:int}"
@using pharmacieBlazor.Models
@using pharmacieBlazor.Services.Interfaces
@inject IOrdonnanceService OrdonnanceService
@inject IPatientService PatientService
@inject IPharmacienService PharmacienService
@inject IMedicamentService MedicamentService
@inject NavigationManager Navigation

<h3>
    <i class="bi bi-file-earmark-medical"></i> @(Id == 0 ? "Créer" : "Modifier") une Ordonnance
</h3>

@if (isLoadingData)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status"></div>
        <p>Chargement des données...</p>
    </div>
}
else
{
    <div class="row">
        <div class="col-md-10">
            <div class="card">
                <div class="card-body">
                    <EditForm Model="@ordonnance" OnValidSubmit="HandleValidSubmit">
                        <DataAnnotationsValidator />
                        <ValidationSummary class="text-danger" />

                        <div class="mb-3">
                            <label for="date" class="form-label">Date *</label>
                            <InputDate id="date" class="form-control" @bind-Value="ordonnance.Date" />
                            <ValidationMessage For="@(() => ordonnance.Date)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label for="patientId" class="form-label">Patient *</label>
                            <InputSelect id="patientId" class="form-select" @bind-Value="ordonnance.PatientId">
                                <option value="0">-- Sélectionner un patient --</option>
                                @foreach (var patient in patients)
                                {
                                    <option value="@patient.Id">@patient.Nom</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => ordonnance.PatientId)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label for="pharmacienId" class="form-label">Pharmacien *</label>
                            <InputSelect id="pharmacienId" class="form-select" @bind-Value="ordonnance.PharmacienId">
                                <option value="0">-- Sélectionner un pharmacien --</option>
                                @foreach (var pharmacien in pharmaciens)
                                {
                                    <option value="@pharmacien.Id">@pharmacien.Nom</option>
                                }
                            </InputSelect>
                            <ValidationMessage For="@(() => ordonnance.PharmacienId)" class="text-danger" />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Médicaments</label>
                            <div class="card">
                                <div class="card-body" style="max-height: 300px; overflow-y: auto;">
                                    @foreach (var medicament in medicaments)
                                    {
                                        <div class="form-check">
                                            <input class="form-check-input"
                                                   type="checkbox"
                                                   id="med-@medicament.Id"
                                                   checked="@ordonnance.MedicamentIds.Contains(medicament.Id)"
                                                   @onchange="e => ToggleMedicament(medicament.Id, (bool)e.Value!)" />
                                            <label class="form-check-label" for="med-@medicament.Id">
                                                @medicament.Nom - @medicament.Dosage
                                            </label>
                                        </div>
                                    }
                                </div>
                            </div>
                            <small class="form-text text-muted">
                                @ordonnance.MedicamentIds.Count médicament(s) sélectionné(s)
                            </small>
                        </div>

                        <div class="mb-3">
                            <button type="submit" class="btn btn-primary" disabled="@isSaving">
                                @if (isSaving)
                                {
                                    <span class="spinner-border spinner-border-sm" role="status"></span>
                                    <span> Enregistrement...</span>
                                }
                                else
                                {
                                    <i class="bi bi-save"></i>
                                    <span> Enregistrer</span>
                                }
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="Cancel">
                                <i class="bi bi-x-circle"></i> Annuler
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public int Id { get; set; }

    private OrdonnanceDto ordonnance = new();
    private List<PatientDto> patients = new();
    private List<PharmacienDto> pharmaciens = new();
    private List<MedicamentDto> medicaments = new();

    private bool isSaving = false;
    private bool isLoadingData = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadReferenceData();

        if (Id != 0)
        {
            var existing = await OrdonnanceService.GetByIdAsync(Id);
            if (existing != null)
            {
                ordonnance = existing;
            }
            else
            {
                Navigation.NavigateTo("/ordonnances");
            }
        }

        isLoadingData = false;
    }

    private async Task LoadReferenceData()
    {
        patients = await PatientService.GetAllAsync();
        pharmaciens = await PharmacienService.GetAllAsync();
        medicaments = await MedicamentService.GetAllAsync();
    }

    private void ToggleMedicament(int medicamentId, bool isChecked)
    {
        if (isChecked)
        {
            if (!ordonnance.MedicamentIds.Contains(medicamentId))
            {
                ordonnance.MedicamentIds.Add(medicamentId);
            }
        }
        else
        {
            ordonnance.MedicamentIds.Remove(medicamentId);
        }
    }

    private async Task HandleValidSubmit()
    {
        isSaving = true;
        try
        {
            if (Id == 0)
            {
                await OrdonnanceService.CreateAsync(ordonnance);
            }
            else
            {
                await OrdonnanceService.UpdateAsync(Id, ordonnance);
            }
            Navigation.NavigateTo("/ordonnances");
        }
        catch (Exception)
        {
            // L'erreur est déjà gérée dans le service
        }
        finally
        {
            isSaving = false;
        }
    }

    private void Cancel()
    {
        Navigation.NavigateTo("/ordonnances");
    }
}
