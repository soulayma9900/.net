@page "/pharmaciens"
@using PharmacieBlazorApp.Models
@using PharmacieBlazorApp.Services.Interfaces
@inject IPharmacienService PharmacienService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3 class="mb-4">
    <i class="bi bi-person-badge"></i> Liste des Pharmaciens
</h3>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="NavigateToCreate">
        <i class="bi bi-plus-circle"></i> Nouveau Pharmacien
    </button>
</div>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Chargement...</span>
        </div>
        <p>Chargement des pharmaciens...</p>
    </div>
}
else if (pharmaciens == null || !pharmaciens.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Aucun pharmacien trouvé.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pharmacien in pharmaciens)
                {
                    <tr>
                        <td>@pharmacien.Id</td>
                        <td>@pharmacien.Nom</td>
                        <td>@pharmacien.Email</td>
                        <td>
                            <div class="btn-group" role="group">
                                <button class="btn btn-sm btn-warning"
                                        @onclick="() => NavigateToEdit(pharmacien.Id)"
                                        title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger"
                                        @onclick="() => DeletePharmacien(pharmacien.Id)"
                                        title="Supprimer">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="alert alert-secondary">
        <strong>Total:</strong> @pharmaciens.Count pharmacien(s)
    </div>
}

@code {
    private List<PharmacienDto>? pharmaciens;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadPharmaciens();
    }

    private async Task LoadPharmaciens()
    {
        isLoading = true;
        pharmaciens = await PharmacienService.GetAllAsync();
        isLoading = false;
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/pharmaciens/create");
    }

    private void NavigateToEdit(int id)
    {
        Navigation.NavigateTo($"/pharmaciens/edit/{id}");
    }

    private async Task DeletePharmacien(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm",
            "Êtes-vous sûr de vouloir supprimer ce pharmacien ?");

        if (confirmed)
        {
            try
            {
                await PharmacienService.DeleteAsync(id);
                await LoadPharmaciens();
            }
            catch (Exception)
            {
                // L'erreur est gérée dans le service
            }
        }
    }
}