@page "/patients"
@using pharmacieBlazor.Models
@using pharmacieBlazor.Services.Interfaces
@inject IPatientService PatientService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime

<h3 class="mb-4">
    <i class="bi bi-people-fill"></i> Liste des Patients
</h3>

<div class="mb-3">
    <button class="btn btn-primary" @onclick="NavigateToCreate">
        <i class="bi bi-plus-circle"></i> Nouveau Patient
    </button>
</div>

@if (isLoading)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Chargement...</span>
        </div>
        <p>Chargement des patients...</p>
    </div>
}
else if (patients == null || !patients.Any())
{
    <div class="alert alert-info">
        <i class="bi bi-info-circle"></i> Aucun patient trouvé.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Date de Naissance</th>
                    <th>Âge</th>
                    <th>Ordonnances</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var patient in patients)
                {
                    <tr>
                        <td>@patient.Id</td>
                        <td>@patient.Nom</td>
                        <td>@patient.DateNaissance.ToString("dd/MM/yyyy")</td>
                        <td>@CalculateAge(patient.DateNaissance) ans</td>
                        <td>
                            <span class="badge bg-info">@patient.OrdonnanceIds.Count</span>
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                <button class="btn btn-sm btn-info"
                                        @onclick="() => NavigateToDetails(patient.Id)"
                                        title="Voir les détails">
                                    <i class="bi bi-eye"></i>
                                </button>
                                <button class="btn btn-sm btn-warning"
                                        @onclick="() => NavigateToEdit(patient.Id)"
                                        title="Modifier">
                                    <i class="bi bi-pencil"></i>
                                </button>
                                <button class="btn btn-sm btn-danger"
                                        @onclick="() => DeletePatient(patient.Id)"
                                        title="Supprimer">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

    <div class="alert alert-secondary">
        <strong>Total:</strong> @patients.Count patient(s)
    </div>
}

@code {
    private List<PatientDto>? patients;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadPatients();
    }

    private async Task LoadPatients()
    {
        isLoading = true;
        patients = await PatientService.GetAllAsync();
        isLoading = false;
    }

    private int CalculateAge(DateTime birthDate)
    {
        var today = DateTime.Today;
        var age = today.Year - birthDate.Year;
        if (birthDate.Date > today.AddYears(-age)) age--;
        return age;
    }

    private void NavigateToCreate()
    {
        Navigation.NavigateTo("/patients/create");
    }

    private void NavigateToDetails(int id)
    {
        Navigation.NavigateTo($"/patients/details/{id}");
    }

    private void NavigateToEdit(int id)
    {
        Navigation.NavigateTo($"/patients/edit/{id}");
    }

    private async Task DeletePatient(int id)
    {
        var confirmed = await JSRuntime.InvokeAsync<bool>("confirm",
            "Êtes-vous sûr de vouloir supprimer ce patient ?");

        if (confirmed)
        {
            try
            {
                await PatientService.DeleteAsync(id);
                await LoadPatients();
            }
            catch (Exception)
            {
                // L'erreur est gérée dans le service
            }
        }
    }
}
